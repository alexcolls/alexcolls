# GitHub Widget Service Configuration

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Weather API Configuration
WEATHER_CITY=Barcelona
WEATHER_API_URL=https://wttr.in
WEATHER_TIMEOUT=10
WEATHER_CACHE_SECONDS=300  # Cache weather for 5 minutes

# Timezone Configuration
PRIMARY_TIMEZONE=Europe/Madrid
SECONDARY_TIMEZONE=America/New_York

# Display Configuration
PRIMARY_CITY_NAME=BARCELONA
PRIMARY_CITY_EMOJI=üèñÔ∏è
SECONDARY_CITY_NAME=NEW YORK
SECONDARY_CITY_EMOJI=üóΩ

# Widget Styling
WIDGET_WIDTH=600
WIDGET_HEIGHT=170
BACKGROUND_COLOR_START=#0d1117
